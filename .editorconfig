# EditorConfig: https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cs,config,cake,csx}]
indent_size = 4

[*.{js,jsx}]
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false

[*.sql]
indent_style = tab
